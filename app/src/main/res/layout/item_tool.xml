<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivToolImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="?attr/colorSurfaceVariant"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvToolName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/ivToolImage"
            app:layout_constraintEnd_toStartOf="@id/btnAddToCart"
            app:layout_constraintTop_toTopOf="@id/ivToolImage"
            tools:text="Taladro Percutor" />

        <TextView
            android:id="@+id/tvToolBrandModel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tvToolName"
            app:layout_constraintEnd_toEndOf="@id/tvToolName"
            app:layout_constraintTop_toBottomOf="@id/tvToolName"
            tools:text="Bosch GSB 20-2" />

        <TextView
            android:id="@+id/tvToolStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:background="@drawable/bg_status_badge"
            app:layout_constraintStart_toStartOf="@id/tvToolName"
            app:layout_constraintTop_toBottomOf="@id/tvToolBrandModel"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Disponible (1 ud.)"
            tools:textColor="@color/brand_green"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToCart"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconPadding="0dp"
            app:iconTint="?attr/colorOnSecondaryContainer"
            android:backgroundTint="@color/brand_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cornerRadius="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>